/// далее скрипт управления элементами теплицы на цифровом устрйостве

[
    [
        [
               открыть{ окно управления };
        ]
        кнопка{ регестрация };
    ]
         обращение{ рамка{телеграм}; авторизованно };
]

[
    [
        [
            открыть{ окно управления };
        ]
        кнопка{ регестрации };
    ]
обращение{ рамка{телеграм}; неавторизованно };
открыть{ поле регестрации };
]
делаем

доброе утречко

[
    [
        [
            [
            окно{ поле регестрации };
            ]
        строка{ имя };
        отправить{ регестрацииРОСТН.ткт };
        ]
    строка{ разрешение на геопозицию };
    запрос{ геопозиция };
    устройство{ активное };
    ]
строка{ номер телефона };
отправить{ { office@digital.gov.ru }; номераРОСТН.ткт };
]
делаем

/// переключение между теплицами
[
    [
        [
        камера{1 - неизвестно}; /// ЧТО? выбрать камеру     
        экран{ основной };      /// ГДЕ? на основном экране
        кнопка{ агробокс{1 - неизвестно} }; /// КОГДА? когда юзер жмакает кнопку агробокс с параметром номера теплицы
        ]
